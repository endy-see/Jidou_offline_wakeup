    <color name="light_gray">#f2f5ff</color>
    <color name="speech_search_deep_blue">#778dc7</color>
    <color name="speech_search_light_blue">#849bd7</color>
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>
    <string name="app_name">WakeupClient</string>
